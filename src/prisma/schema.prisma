generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {

  id          Int        @id @default(autoincrement())
  title       String     @unique
  point       Int
  playTime    String
  poster      String[]
  description String
  play        Play[]
  genre       Genre[]
  director    Director[]

}

model Actor {
  id        Int    @id @default(autoincrement())
  actorName String
  play      Play[]
}

model Character {
  id            Int    @id @default(autoincrement())
  characterName String
  play          Play[]
}

model Genre {
  id      Int    @id @default(autoincrement())
  type    String
  Movie   Movie? @relation(fields: [movieId], references: [id])
  movieId Int?
}

model Director {
  id           Int    @id @default(autoincrement())
  directorName String
  Movie        Movie? @relation(fields: [movieId], references: [id])
  movieId      Int?
}

model Play {
  id          Int        @id @default(autoincrement())
  actorId     Int?
  characterId Int?
  Actor       Actor?     @relation(fields: [actorId], references: [id])
  Character   Character? @relation(fields: [characterId], references: [id])
  Movie       Movie?     @relation(fields: [movieId], references: [id])
  movieId     Int?
}

model Play {
  id          Int        @id @default(autoincrement())
  Actor       Actor?     @relation(fields: [actorId], references: [id])
  actorId     Int?
  Character   Character? @relation(fields: [characterId], references: [id])
  characterId Int?
}
